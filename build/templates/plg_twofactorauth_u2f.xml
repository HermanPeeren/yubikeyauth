	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="section" type="radio"
					default="3"
					class="btn-group"
					description="PLG_TWOFACTORAUTH_U2F_SECTION_DESC"
					label="PLG_TWOFACTORAUTH_U2F_SECTION_LABEL"
				>
					<option value="1">PLG_TWOFACTORAUTH_U2F_SECTION_SITE</option>
					<option value="2">PLG_TWOFACTORAUTH_U2F_SECTION_ADMIN</option>
					<option value="3">PLG_TWOFACTORAUTH_U2F_SECTION_BOTH</option>
				</field>
			</fieldset>
		</fields>
	</config>
