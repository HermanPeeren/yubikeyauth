	<copyright>Copyright (C) 2013-2015 Akeeba Ltd. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<authorEmail>nicholas@akeebabackup.com</authorEmail>
	<authorUrl>www.akeebabackup.com</authorUrl>
	<version>##VERSION##</version>
	<description>PLG_TWOFACTORAUTH_U2F_XML_DESCRIPTION</description>
	<files>
		<filename plugin="u2f">u2f.php</filename>
		<filename>index.html</filename>
		<folder>lib</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_twofactorauth_u2f.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_twofactorauth_u2f.sys.ini</language>
